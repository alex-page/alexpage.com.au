<div class="main-menu">
	<a class="main-menu__logo{% if page.url == "/" %} active{% endif %}" href="/">
		<img alt="logo" src="/assets/img/logo.svg" />Alex Page
	</a>
	<ul class="menu menu--inline">
		{%- for menuItem in collections.mainMenuItems -%}
			<li>
				<a href="{{menuItem.url}}" {% if menuItem.url in page.url %}class="active"{% endif %}>{{ menuItem.data.pagetitle }}</a>
			</li>
		{%- endfor -%}
	</ul>
</div>
