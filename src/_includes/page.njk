{% set isHome = (page.url === '/') %}
<!DOCTYPE html>
<html lang="en">
<head>
	{% include 'components/meta.njk' %}
	<title>{{ 'Home' if isHome else title }} - Alex Page</title>
	<style>{% cssBundle %}</style>
</head>
<body>
	<a class="skip-link sr-only" href="#content">Skip to content</a>
	<div class="container">
		{% if not isHome %}
			<a class="text--small" href="/">‚Üê Back home</a>
		{% endif %}
		{% if img %}{% include 'components/picture.njk' %}{% endif %}
		<main class="content" id="content">
			<h1>{{title}}</h1>
			<blockquote>{{summary}}</blockquote>
			{{content | safe}}
			{% if isHome %}{% include 'components/posts.njk' %}{% endif %}
		</main>
		{% include 'components/footer.njk' %}
	</div>
</body>
</html>
